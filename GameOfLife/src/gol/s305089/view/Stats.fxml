<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="450.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gol.s305089.controller.StatsController">
   <center>
      <StackPane>
         <children>
            <LineChart fx:id="chart" title="Game of Life Stats" verticalGridLinesVisible="true" animated="false" >
              <xAxis>
                <CategoryAxis side="BOTTOM" label="GoL Iteration" autoRanging="true"/>
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" autoRanging="true"  minorTickVisible="false"  />
              </yAxis>
            </LineChart>
            <ProgressIndicator fx:id="progIndicator" maxHeight="200.0" maxWidth="200.0" prefHeight="200.0" prefWidth="200.0" progress="0.0" visible="false" />
         </children>
      </StackPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Iterations to calculate:" textOverrun="CENTER_ELLIPSIS" />
            <Spinner fx:id="spinnerIterations" prefHeight="25.0" prefWidth="85.0" />
            <Button mnemonicParsing="false" onAction="#calculatGameStats" text="Calculate stats" />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
