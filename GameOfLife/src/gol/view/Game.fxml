<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gol.controller.GameController">
    <center>
        <fx:include fx:id="canvas" source="Canvas.fxml" />
    </center>
    <right>
        <TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="250.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="General">
                    <content>
                        <VBox>
                            <children>
                                <TitledPane collapsible="false" prefWidth="250.0">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <Label layoutX="8.0" layoutY="14.0" text="Speed/Itterations per second:" />
                                                <Label fx:id="animationSpeedLabel" layoutX="168.0" layoutY="32.0" text="1,00" />
                                                <Slider fx:id="animationSpeedSlider" layoutX="14.0" layoutY="33.0" min="1" onValueChange="#handleAnimationSpeedSlider" value="2.0" />
                                                <Label layoutX="11.0" layoutY="54.0" text="Zoom:" />
                                                <Slider fx:id="cellSizeSlider" layoutX="18.0" layoutY="71.0" max="95" min="0" onValueChange="#handleZoom" value="95" />
                                                <Label layoutX="12.0" layoutY="98.0" text="Gridspacing" />
                                                <Slider fx:id="gridSpacingSlider" layoutX="17.0" layoutY="118.0" max="20" min="0" onValueChange="#handleGridSpacingSlider" value="3" />
                                                <Button fx:id="startPauseBtn" layoutX="6.0" layoutY="145.0" mnemonicParsing="false" onAction="#handleAnimation" text="Start game" />
                                                <Button layoutX="146.0" layoutY="145.0" mnemonicParsing="false" onAction="#handleClearBtn" text="Clean board" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>
                                <TitledPane animated="false" collapsible="false">
                                    <content>
                                        <AnchorPane prefWidth="200.0">
                                            <children>
                                                <RadioButton layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Add cells" />
                                                <RadioButton layoutX="14.0" layoutY="45.0" mnemonicParsing="false" text="Remove cells" />
                                                <RadioButton layoutX="14.0" layoutY="74.0" mnemonicParsing="false" text="Move grid" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Pattern">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <TitledPane animated="false" collapsible="false" text="Import">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0">
                                            <children>
                                                <Button layoutX="25.0" layoutY="6.0" mnemonicParsing="false" onAction="#handleImportFileBtn" text="Import pattern from file" />
                                                <Button layoutX="25.0" layoutY="42.0" mnemonicParsing="false" text="Import/search pattern from internet" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>
                                <TitledPane animated="false" collapsible="false" text="Export">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0">
                                            <children>
                                                <Button layoutX="24.0" layoutY="10.0" mnemonicParsing="false" text="Export pattern to file" />
                                                <Button layoutX="24.0" layoutY="44.0" mnemonicParsing="false" text="Export to GIF" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>
                                <TitledPane animated="false" collapsible="false" text="Edit">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0">
                                            <children>
                                                <Button layoutX="27.0" layoutY="14.0" mnemonicParsing="false" text="Open Pattern Editor" />
                                                <Label layoutX="27.0" layoutY="50.0" text="PS: I redigering har du også &#10;mulighet til å importere mønster &#10;fra fil og internett" wrapText="true" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Advanced">
                    <content>
                        <VBox prefWidth="250.0">
                            <children>
                                <TitledPane collapsible="false" prefWidth="250.0">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0">
                                            <children>
                                                <RadioButton layoutX="14.0" layoutY="37.0" mnemonicParsing="false" selected="true" text="2D" />
                                                <RadioButton layoutX="57.0" layoutY="37.0" mnemonicParsing="false" text="3D" />
                                                <Label layoutX="14.0" layoutY="14.0" text="Visning av brett:" />
                                                <ColorPicker fx:id="cellCP" layoutX="12.0" layoutY="111.0" onValueChange="#handleColor" prefWidth="176.0" />
                                                <Label layoutX="12.0" layoutY="87.0" text="Farge til punkter:" />
                                                <ColorPicker fx:id="backgroundCP" layoutX="14.0" layoutY="182.0" onValueChange="#handleColor" prefWidth="176.0" />
                                                <Label layoutX="14.0" layoutY="159.0" text="Farge til bakgrunn:" />
                                                <Separator layoutX="-4.0" layoutY="68.0" prefHeight="3.0" prefWidth="227.0" />
                                                <Separator layoutX="-4.0" layoutY="146.0" prefHeight="3.0" prefWidth="227.0" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>
                                <TitledPane collapsible="false" text="Spillregler">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="300.0" prefWidth="250.0">
                                            <children>
                                                <ComboBox layoutX="2.0" layoutY="14.0" prefWidth="150.0" promptText="Standard" />
                                                <Label layoutX="7.0" layoutY="53.0" text="Naboer for å leve" />
                                                <Label layoutX="7.0" layoutY="84.0" text="Naboer for å våkne" />
                                                <TextField disable="true" layoutX="123.0" layoutY="49.0" prefHeight="25.0" prefWidth="92.0" text="2,3" />
                                                <TextField disable="true" layoutX="123.0" layoutY="80.0" prefHeight="25.0" prefWidth="92.0" text="3" />
                                                <Button disable="true" layoutX="68.0" layoutY="120.0" mnemonicParsing="false" text="Lagre regler" />
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </TitledPane>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>

    </right>
    <bottom>
        <fx:include fx:id="statsToolbar" source="QuickStats.fxml" />
    </bottom>
</BorderPane>
